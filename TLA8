//switch case
    function myFunction() {
    var text;
    var colors = document.getElementById("input").value;
    switch (colors) {
        case "red":
            text = "Im a color Red";
            break;
        case "blue":
            text = "Im a color Blue";
            break;
        case "green":
            text = "Im a color Green";
            break;
        case "yellow":
            text = "Im a color Yellow";
            break;
        case "orange":
            text = "Im a color Orange";
            break;
        case "purple":
            text = "Im a color Purple";
            break;
        default:
            text = "Never heard of that";
    }
    document.getElementById("color").innerHTML = text;
}
            
    </script>
