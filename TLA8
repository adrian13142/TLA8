    <p>SELECT A COLOR</br>RED, BLUE, GREEN, ORANGE, YELLOW, PURPLE</p>
    <input id="input" type="text">
    <button onclick="myFunction()">Select</button>
    <p id="color"></p>

    <script>
    //month
    const months = ["January", "Febuary","March","April","May","June","July", "August", "September", "October", 
    "November", "December"];
    const d = new Date();
    let month = months[d.getMonth()];
    document.getElementById("month").innerHTML= month; 
    //year
    document.getElementById("year").innerHTML = new Date().getFullYear();
    //day
    const b = new Date();
    let day = b.getDay()
    document.getElementById("day").innerHTML = day;
    //hours
    const e = new Date();
    let hour = e.getHours();
    document.getElementById("hours").innerHTML = hour;
    //minutes
    const f = new Date();
    let minute = f.getMinutes();
    document.getElementById("minutes").innerHTML = minute;
    //seconds
    const g = new Date();
    let second = g.getSeconds();
    document.getElementById("seconds").innerHTML = second;

    //else if
    const time = new Date().getHours();
    let greeting;
    if (time < 11) {
        greeting = "Good morning po!";
        
    } else if (time <18 ) {
        greeting = "Good day po!"
    } else {
        greeting = "Good evening po!"
    }
    document.getElementById("check").innerHTML = greeting;
/*
    var age = prompt ("Please enter your age po!: ");
